{
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "/usr/local/lib/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },
    "cmake.configureOnOpen": true,
    "cmake.configureArgs": [
        "-Wno-dev"
    ],
    "C_Cpp.vcpkg.enabled": true
}
