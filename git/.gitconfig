[user]
	name = exTerEX
	email = 30706568+exTerEX@users.noreply.github.com
	singingkey = A2893BF0F2DF1B57
[init]
	defaultBranch = main
[commit]
	gpgsign = true
	template = ~/.config/git/.gitmessage
[core]
	excludesfile = ~/.config/git/.gitignore
	attributesfile = ~/.config/git/.gitattributes
	autocrlf = input
	editor = code
	fileMode = true
	hidedotfiles = false
	protectntfs = true
	safecrlf = warn
	symlinks = true
[github]
	user = exterex
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[status]
	submoduleSummary = true
[diff]
	submodule = log
[default]
	protocol = ssh
[gpg]
	program = gpg
[tag]
	forcesignannotated = true
[help]
	autocorrect = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[submodule]
	recurse = true
[credential]
	helper = cache
